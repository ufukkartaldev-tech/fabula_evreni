rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isValidSize(maxSizeMB) {
      return request.resource.size < maxSizeMB * 1024 * 1024;
    }
    
    // User avatars
    match /avatars/{userId}/{fileName} {
      // Anyone can read avatars
      allow read: if true;
      
      // Users can only upload their own avatar
      allow create, update: if isOwner(userId)
        && isImage()
        && isValidSize(5); // 5MB max for avatars
      
      // Users can only delete their own avatar
      allow delete: if isOwner(userId);
    }
    
    // Story images
    match /stories/{storyId}/{fileName} {
      // Anyone can read story images
      allow read: if true;
      
      // Authenticated users can upload story images
      // Note: We can't easily verify story ownership here without a Firestore lookup
      // So we allow any authenticated user to upload, but the app should enforce ownership
      allow create, update: if isSignedIn()
        && isImage()
        && isValidSize(10); // 10MB max for story images
      
      // Only authenticated users can delete story images
      // The app should verify ownership before allowing deletion
      allow delete: if isSignedIn();
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
